.profile{
  background: #E54847;
    height: 300 rpx;
  text-align: center;
  position: relative;
  width: 100%;
}

.profile-img{
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  position: absolute;
  left: 50%;
    top: 0;
    transform: translate(-50%, 0 rpx);
}

.profile-name{
  font-size: 36rpx;
  color: #fff;
  position: absolute;
  left: 50%;
    transform: translate(-50%, 210 rpx);
}

.pageStyle {
    position: fixed;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #d4237a;
}

.inviteView {
    width: 80%;
    left: 10%;
    background-color: #fff;
    border-radius: 10 rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    border: 3 rpx solid #fff;
    box-shadow: #f5f5f5 0px 0px 10px 5px;
}

.backImage {
    width: 100%;
    height: 50%;
    background-color: #f5f5f5;
    border-top-left-radius: 10 rpx;
    border-top-right-radius: 10 rpx;
}

.titlename {
    margin-top: 10 rpx;
    color: #d4237a;
    font-size: 20px;
    font-weight: bold;
    padding: 10 rpx;
}

.msgtext {
    color: #000;
    font-size: 16px;
    text-align: center;
    padding: 10 rpx;
}
